@model Comic_book_gallery.Models.ComicBook
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title=Model.DisplayText;


}


    <h1>@Model.SeriesTitle</h1>
    <h2> @Model.IssueNumber</h2>

    <h5> Description:</h5>
    <div>  @Html.Raw(Model.DescriptionHtml)</div>

    <h5>Artists:</h5>
    @if (Model.Artists.Length > 0)
    {
    <div>
        <ul>

            @foreach (var artist in Model.Artists)
            {
                <li>

                    <text>*@artist.Role:@artist.Name </text>
                </li>
            }
        </ul>
        </div>
    }
